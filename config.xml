										-->
<preference name="StatusBarBackgroundColor" value="#000000"/>	<!--optional-->
<preference name="StatusBarStyle" value="lightcontent" />		<!--optional-->
<preference name="StatusBarStyle" value="default" />
<preference name="SplashScreen" value="screen" />
<preference name="SplashScreenDelay" value="2500" />  		<!--splashscreen show time-->
<preference name="show-splash-screen-spinner" value="true"  />
<preference name="AndroidPersistentFileLocation" value="Compatibility" />
<preference name="prerendered-icon" value="true"/>		<!--meant for Android to show app icon and not generic-->


